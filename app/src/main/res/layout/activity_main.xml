<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        app:rowCount="4">

        <Button
            android:id="@+id/doyouspeakenglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playPhrase"
            android:tag="1"
            android:text="Do You Speak \n English?"
            android:textAllCaps="false"
            android:textDirection="firstStrongRtl"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/goodevening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playPhrase"
            android:tag="2"
            android:text="Good Evening"
            android:textAllCaps="false"
            android:textDirection="firstStrongRtl"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playPhrase"
            android:tag="3"
            android:text="Hello"
            android:textAllCaps="false"
            android:textDirection="firstStrongRtl"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/howareyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playPhrase"
            android:tag="4"
            android:text="How Are You?"
            android:textAllCaps="false"
            android:textDirection="firstStrongRtl"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/ilivein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playPhrase"
            android:tag="5"
            android:text="I Live In..."
            android:textAllCaps="false"
            android:textDirection="firstStrongRtl"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/mynameis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playPhrase"
            android:tag="6"
            android:text="My Name Is..."
            android:textAllCaps="false"
            android:textDirection="firstStrongRtl"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/please"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playPhrase"
            android:tag="7"
            android:text="Please"
            android:textAllCaps="false"
            android:textDirection="firstStrongRtl"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playPhrase"
            android:tag="8"
            android:text="Welcome"
            android:textAllCaps="false"
            android:textDirection="firstStrongRtl"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

    </android.support.v7.widget.GridLayout>
</RelativeLayout>